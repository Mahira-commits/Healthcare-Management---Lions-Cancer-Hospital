<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientdashboard.diagnosis.PresFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

    <com.example.lion_nav_barhomepage.patientdashboard.diagnosis.ZoomClass
        android:id="@+id/largeImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        tools:src="@drawable/loading"

        app:layout_constraintBottom_toTopOf="@id/enquire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/edittext1"
            android:textColor="#1B3A92"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/enquire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enquire"
            android:background="@drawable/edittext1"
            android:textColor="#1B3A92"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>